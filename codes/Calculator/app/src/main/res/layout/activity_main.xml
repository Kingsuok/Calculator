<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3C"
    android:orientation="vertical"
    tools:context="com.a655.su.calculator.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FF0000"
                android:textSize="10pt"
                android:background="#000"
                android:gravity="bottom|right"
                android:id="@+id/displayMemory"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textColor="#FFF"
                android:textSize="15pt"
                android:background="#000"
                android:maxLines="2"
                android:id="@+id/display"
                android:gravity="center_horizontal|right|bottom"
                />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00000000">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"
            android:layout_weight="1">

            <Button
                android:text="%"
                android:textSize="17pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"

                android:textColor="#FFF"
                android:background="#000"
                android:id="@+id/button_percent"
                />

            <Button
                android:text="7"
                android:textSize="20pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"

                android:id="@+id/button_7" />

            <Button
                android:textSize="20pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:layout_marginLeft="1.5dp"
                android:text="8"
                android:id="@+id/button_8"/>

            <Button
                android:textSize="20pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"

                android:text="9"
                android:id="@+id/button_9"/>

            <Button
                android:textSize="20pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:text="÷"
                android:id="@+id/button_division"/>

            <Button
                android:textSize="14pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:text="X"
                android:id="@+id/button_multiplication"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:paddingBottom="1.5dp"
            android:layout_weight="1">

            <Button
                android:text="√"
                android:textSize="19pt"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:id="@+id/button_root"/>

            <Button
                android:text="4"
                android:textSize="20pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:id="@+id/button_4"/>
            <Button
                android:text="5"
                android:textSize="20pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:id="@+id/button_5" />
            <Button
                android:text="6"
                android:textSize="20pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:id="@+id/button_6" />
            <Button
                android:text="-"
                android:textSize="20pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:id="@+id/button_subtraction" />
            <Button
                android:text="MRC"
                android:textSize="10pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="1.5dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:background="#000"
                android:id="@+id/button_MRC"/>
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:text="C"
            android:textColor="#FFF"
            android:background="#000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1638"
            android:layout_marginBottom="1.5dp"

            android:textSize="20pt"
            android:id="@+id/button_C"/>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.509"
            android:paddingLeft="1.5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:paddingBottom="1.5dp"
                android:paddingRight="1.5dp"

                android:layout_weight="1">

                <Button
                    android:text="1"
                    android:textSize="20pt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"

                    android:textColor="#FFF"
                    android:background="#000"
                    android:id="@+id/button_1"/>

                <Button
                    android:text="2"
                    android:textSize="20pt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1.5dp"
                    android:layout_height="match_parent"
                    android:textColor="#FFF"
                    android:background="#000"
                    android:id="@+id/button_2"/>

                <Button
                    android:text="3"
                    android:textSize="20pt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1.5dp"
                    android:layout_height="match_parent"
                    android:textColor="#FFF"
                    android:background="#000"
                    android:id="@+id/button_3"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:paddingBottom="1.5dp"
                android:paddingRight="1.5dp"
                android:layout_weight="1">

                <Button
                    android:text="0"
                    android:textSize="20pt"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:layout_height="match_parent"
                    android:textColor="#FFF"
                    android:background="#000"
                    android:id="@+id/button_0"
                    />

                <Button
                    android:text="."
                    android:textSize="20pt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1.5dp"
                    android:layout_height="match_parent"
                    android:textColor="#FFF"
                    android:background="#000"
                    android:id="@+id/button_dot" />

                <Button
                    android:text="="
                    android:textSize="20pt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1.5dp"
                    android:layout_height="match_parent"
                    android:textColor="#FFF"
                    android:background="#000"
                    android:id="@+id/button_equal" />
            </TableRow>

        </TableLayout>

        <Button
            android:text="+"
            android:textColor="#FFF"
            android:background="#000"
            android:layout_width="0dp"
            android:layout_weight="0.16664"
            android:layout_height="match_parent"

            android:textSize="20pt"
            android:layout_marginBottom="1.5dp"
            android:layout_marginRight="1.5dp"
            android:id="@+id/button_plus"/>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.162">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:paddingBottom="1.5dp"

                android:layout_weight="1">

                <Button
                    android:text="M-"
                    android:textColor="#FFF"
                    android:background="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"

                    android:textSize="14pt"



                    android:id="@+id/button_M_Sub" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:paddingBottom="1.5dp"

                android:layout_weight="1">

                <Button
                    android:text="M+"
                    android:textColor="#FFF"
                    android:background="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"

                    android:textSize="13pt"

                    android:id="@+id/button_M_Plus" />

            </TableRow>

        </TableLayout>

    </LinearLayout>


</LinearLayout>